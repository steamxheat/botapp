from telethon import TelegramClient, events, Button

API_ID = 2040
API_HASH = 'b18441a1ff607e10a989891a5462e627'
BOT_TOKEN = '7638076310:AAHL2G37wOaOmZNjS65sffUkQuz44xvHyJ8'

client = TelegramClient('bot_session', API_ID, API_HASH)

@client.on(events.NewMessage(pattern='/start'))
async def start_handler(event):
    await event.reply(
        "üéÅ **–ë–µ—Å–ø–ª–∞—Ç–Ω—ã–µ NFT/HOT TT**\n\n"
        "–ü–æ–ª—É—á–∏—Ç–µ –±–µ—Å–ø–ª–∞—Ç–Ω—ã–µ NFT –ø–æ–¥–∞—Ä–∫–∏:\n\n"
        "üî• HOT TT\n"
        "üéÅ –†–µ–¥–∫–∏–µ NFT\n\n"
        "–ù–∞–∂–º–∏—Ç–µ –∫–Ω–æ–ø–∫—É –Ω–∏–∂–µ —á—Ç–æ–±—ã –ø–æ–ª—É—á–∏—Ç—å:",
        buttons=[
            [Button.url("üéÅ –ü–û–õ–£–ß–ò–¢–¨ NFT", "https://t.me/your_bot?start=webapp")],
            [Button.inline("üìä –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞", b"stats")]
        ]
    )

@client.on(events.CallbackQuery)
async def callback_handler(event):
    if event.data == b'stats':
        await event.edit("üìä **–°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞**\n\nNFT –ø–æ–ª—É—á–µ–Ω–æ: 0\nHOT TT: 0")

async def main():
    await client.start(bot_token=BOT_TOKEN)
    print("ü§ñ –ë–æ—Ç –∑–∞–ø—É—â–µ–Ω!")
    await client.run_until_disconnected()

asyncio.run(main())
import asyncio
from telethon import TelegramClient, events, Button

API_ID = 2040
API_HASH = 'b18441a1ff607e10a989891a5462e627'
BOT_TOKEN = '7638076310:AAHL2G37wOaOmZNjS65sffUkQuz44xvHyJ8'

client = TelegramClient('bot_session', API_ID, API_HASH)

@client.on(events.NewMessage(pattern='/start'))
async def start_handler(event):
    await event.reply(
        "üéÅ Telegram Gifts\n\n–ü–æ–ª—É—á–∏—Ç–µ –≤–∞—à NFT –ø–æ–¥–∞—Ä–æ–∫:\n\nhttp://localhost:3000/webapp",
        buttons=[
            [Button.url("üéÅ –ü–û–õ–£–ß–ò–¢–¨ –ü–û–î–ê–†–û–ö", "http://localhost:3000/webapp")]
        ]
    )

async def main():
    await client.start(bot_token=BOT_TOKEN)
    print("ü§ñ –ë–æ—Ç –∑–∞–ø—É—â–µ–Ω!")
    await client.run_until_disconnected()

asyncio.run(main())
